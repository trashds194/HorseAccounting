<Page x:Class="HorseAccounting.View.ShowHorse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HorseAccounting.View"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      DataContext="{Binding ShowHorseViewModel, Source={StaticResource Locator}}"
      Background="White">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="button" Command="{Binding BackToList}" Content="Назад" Margin="20,10" FontSize="18"/>

        <Label Grid.Row="0" Grid.Column="1" Content="Просмотр лошади" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" FontFamily="Segoe Print" FontWeight="Bold"/>

        <ListView Name="HorseList" Margin="20" ItemsSource="{Binding SelectedHorseList}" Grid.RowSpan="4" Grid.Row="1" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid x:Name="List">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding GpkNum}" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding NickName}" Grid.Column="1" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Brand}" Grid.Column="2" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Bloodiness}" Grid.Column="3" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding BirthDate}" Grid.Column="4" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Color}" Grid.Column="5" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding BirthPlace}" Grid.Column="6" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Owner}" Grid.Column="7" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock Text="№ по ГПК" Grid.Row="1" Margin="10,0,0,0"/>
                            <TextBlock Text="кличка" Grid.Row="1" Grid.Column="1" Margin="10,0,0,0"/>
                            <TextBlock Text="тавро" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0"/>
                            <TextBlock Text="Кровность" Grid.Row="1" Grid.Column="3" Margin="10,0,0,0"/>
                            <TextBlock Text="Год рожд." Grid.Row="1" Grid.Column="4" Margin="10,0,0,0"/>
                            <TextBlock Text="Масть" Grid.Row="1" Grid.Column="5" Margin="10,0,0,0"/>
                            <TextBlock Text="Место рождения" Grid.Row="1" Grid.Column="6" Margin="10,0,0,0"/>
                            <TextBlock Text="Владелец" Grid.Row="1" Grid.Column="7" Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
