<Page x:Class="HorseAccounting.View.HorsesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HorseAccounting.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HorsesList" Background="White">

    <Grid>
        <DataGrid AutoGenerateColumns="False" Name="HorseList" Margin="20" ItemsSource="{Binding Horses}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ по ГПК" Binding="{Binding Path=GpkNum}"></DataGridTextColumn>
                <DataGridTextColumn Header="Кличка" Binding="{Binding Path=NickName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Тавро" Binding="{Binding Path=Brand}"></DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</Page>
